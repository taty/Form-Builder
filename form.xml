<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <form>
        <method>post</method>
        <action>form.php</action>
        <name>info</name>
        <enctype>multipart/form-data</enctype>
        <item>
            <label>First Name</label>
            <placeholder>Your First Name</placeholder>
            <class>required</class>
            <elem>input</elem>
            <type>text</type>
            <name>firstname</name>
            <id>cfirstname</id>
        </item>
        <item>
            <label>Last Name</label>
            <class>required</class>
            <elem>input</elem>
            <type>text</type>
            <name>lastname</name>
            <id>clastname</id>
        </item>
 	<item>
            <label>Email</label>
            <class>required</class>
            <elem>input</elem>
            <type>text</type>
            <name>email</name>
        </item>
        <item>
            <label>Image</label>
            <class>required</class>
            <elem>input</elem>
            <type>file</type>
            <name>image</name>
        </item>
        <item>
            <label>Description</label>
            <elem>textarea</elem>
            <name>description</name>
            <rows>5</rows>
            <cols>10</cols>
        </item>
        <item>
            <label>Desc</label>
            <elem>textarea</elem>
            <name>desc</name>
            <class>required</class>
            <rows>5</rows>
            <cols>10</cols>
        </item>
