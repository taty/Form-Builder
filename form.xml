        <item>
            <label>Style</label>
            <class>required</class>
            <elem>input</elem>
            <type>checkbox</type>
            <name>style</name>
            <value>medium</value>
        </item>
        <item>
            <label>Next Style</label>
            <class>required</class>
            <elem>input</elem>
            <type>checkbox</type>
            <name>nextstyle</name>
            <value>small</value>
        </item>
        <item>
            <label>Last Style</label>
            <class>required</class>
            <elem>input</elem>
            <type>checkbox</type>
            <name>laststyle</name>
            <value>big</value>
        </item>
        <item>
            <label>Country</label>
            <elem>select</elem>
            <name>country</name>
            <id>ccountry</id>
            <option>
                <value></value>
                <text></text>
            </option>
            <option>
                <value>Ukraine</value>
                <selected>1</selected>
                <text>Ukraine</text>
            </option>
            <option>
                <value>Russia</value>
                <text>Russia</text>
            </option>
        </item>
        <item>
            <label>City</label>
            <elem>select</elem>
            <class>required</class>
            <name>city</name>
            <id>ccity</id>
            <option>
                <value></value>
                <text></text>
            </option>
            <option>
                <value>Kiev</value>
                <text>Kiev</text>
            </option>
            <option>
                <value>Kharkov</value>
                <text>Kharkov</text>
            </option>
        </item>
        <item>
            <elem>input</elem>
            <type>submit</type>
            <class>submit</class>
            <name>send</name>
            <value>Send</value>
        </item>
    </form>
